<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".RestaurantActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="36dp"
        android:textSize="24sp"
        android:text="Restaurant Details"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name..."
        android:layout_marginBottom="18dp"
        android:layout_marginHorizontal="12dp"
        android:id="@+id/restaurantNameInput"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Address..."
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp"
        android:layout_marginHorizontal="12dp"
        android:id="@+id/restaurantAddressInput"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Contact Number"
        android:layout_marginBottom="18dp"
        android:layout_marginHorizontal="12dp"
        android:id="@+id/restaurantNumberInput"/>

    <Button
        android:id="@+id/restaurantImageUploadButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload Image"/>

    <Button
        android:id="@+id/restaurantUploadButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:id="@+id/restaurantViewOrderButton"
        android:text="view orders"/>


</LinearLayout>